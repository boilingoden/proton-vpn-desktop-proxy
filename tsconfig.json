{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@common/*": ["src/common/*"]
        },
        "skipLibCheck": true,
        "types": ["electron", "node"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
